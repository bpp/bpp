all: $(PROG)

$(PROG): $(OBJ_AVX2) $(OBJ_AVX) $(OBJ_SSE) $(OBJ_LIBPLL) $(OBJ_BPP) 
	link /out:$@ $** libpthreadvc3.lib

$(OBJ_AVX2): $(SRC_AVX2)
	cl -c $(CFLAGS) /arch:AVX2 $**

$(OBJ_AVX): $(SRC_AVX)
	cl -c $(CFLAGS) /arch:AVX $**

$(OBJ_SSE): $(SRC_SSE)
	cl -c $(CFLAGS) /arch:AVX $**

$(OBJ_LIBPLL): $(SRC_LIBPLL)
	cl -c $(CFLAGS) $**

clean:
	del *.obj $(PROG)
