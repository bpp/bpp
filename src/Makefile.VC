	arch.obj \
	allfixed.obj \
	bfdriver.obj \
	bpp.obj \
	cfile.obj \
	cfile_sim.obj \
	compress.obj \
	constraint.obj \
	debug.obj \
	delimit.obj \
	diploid.obj \
	dlist.obj \
	dump.obj \
	gamma.obj \
	gtree.obj \
	hash.obj \
